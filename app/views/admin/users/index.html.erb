<h2>用户清单</h2>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Action</th>
      <th>Groups</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user|%>
    <tr>
      <td><%= user.id%></td>
      <td><%= user.email%></td>
      <td>
        <% user.groups.each do |g|%>
          <%= g.name %><br>
        <% end %>
      </td>
      <td><%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-default"%></td>
    </tr>
    <% end %>
  </tbody>
</table>
